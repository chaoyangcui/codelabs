<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    ohos:padding="12vp"
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:background_element="#B2D9E8"
    ohos:height="match_parent"
    ohos:orientation="horizontal"
    ohos:remote="true"
    ohos:width="match_parent">

    <DirectionalLayout
        ohos:background_element="$graphic:background_card1"
        ohos:height="match_parent"
        ohos:weight="3"
        ohos:width="0vp">

        <Image
            ohos:height="match_parent"
            ohos:image_src="$media:pic"
            ohos:scale_mode="stretch"
            ohos:width="match_parent" />
    </DirectionalLayout>

    <DirectionalLayout
        ohos:left_padding="10vp"
        ohos:alignment="center"
        ohos:orientation="vertical"
        ohos:height="match_parent"
        ohos:weight="2"
        ohos:width="0vp">

        <Button
            ohos:background_element="$graphic:background_card1"
            ohos:height="35vp"
            ohos:text="导航"
            ohos:text_color="#666666"
            ohos:text_size="18fp"
            ohos:width="match_parent" />

        <Button
            ohos:top_margin="10vp"
            ohos:bottom_margin="10vp"
            ohos:layout_alignment="vertical_center"
            ohos:background_element="$graphic:background_card1"
            ohos:height="35vp"
            ohos:text="回家"
            ohos:text_color="#666666"
            ohos:text_size="18fp"
            ohos:width="match_parent" />

        <Button
            ohos:layout_alignment="vertical_center"
            ohos:background_element="$graphic:background_card1"
            ohos:height="35vp"
            ohos:text="上班"
            ohos:text_color="#666666"
            ohos:text_size="18fp"
            ohos:width="match_parent" />

    </DirectionalLayout>

</DirectionalLayout>